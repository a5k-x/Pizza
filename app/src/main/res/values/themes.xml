<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Pizza" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">#FFFFFF</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->


    </style>

    <style name="BottomNavigationViewStyle" parent="Theme.Pizza">
        <item name="android:background">#F0F0F0</item>
        <item name="itemIconTint">@color/chip_text_color</item>
        <item name="itemTextColor">@color/chip_text_color</item>

    </style>

    <style name="ButtonCityStyle" parent="Theme.Pizza">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:backgroundTint">@color/white</item>
        <item name="android:stateListAnimator">@null</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:textColor">@color/black</item>
        <item name="icon">@drawable/icon_down</item>
        <item name="iconGravity">end</item>
        <item name="iconPadding">14dp</item>
        <item name="iconTint">@color/black</item>

    </style>

    <style name="ChipGroupStyle" parent="Theme.Pizza">
        <item name="android:orientation">horizontal</item>
        <item name="checkedChip">@id/chip1</item>
        <item name="android:layout_marginBottom">@dimen/chipGroup_margin_bottom</item>
        <item name="singleLine">true</item>
        <item name="singleSelection">true</item>

    </style>

    <style name="ChipStyle" parent="Theme.Pizza">

        <item name="android:layout_marginStart">8dp</item>

        <item name="android:checkable">true</item>
        <item name="android:elevation">8dp</item>
        <item name="android:textColor">@color/chip_text_color</item>
        <item name="chipBackgroundColor">@color/chip_colors</item>
        <item name="chipCornerRadius">6dp</item>
        <item name="chipEndPadding">25dp</item>
        <item name="chipStartPadding">24dp</item>

    </style>
    <style name="CardBannerStyle" parent="Theme.Pizza">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
        <item name="cardCornerRadius">8dp</item>

    </style>
    <style name="MenuContainerStyle" parent="Theme.Pizza">
       <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginTop">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>

    </style>
</resources>